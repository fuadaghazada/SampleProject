public class Circle extends NewShape {
    

    //properties
    double radius;
    final double pi = Math.PI;
    int x;
    int y;
    boolean selected;
  
    //constructors
    public Circle(double radius) {
        this.radius = radius;
        x =0;
        y =0;
        selected =false;
    }

    //methods
    @Override
    public double getArea() {
        return pi * Math.pow(radius, 2);
    }

    public double perimeter() {
        return 2 * pi * radius;
    }
    
    public void setLocation(int a, int b) {
      x = a;
      y = b;
    }
    
    
    @Override
    public int getX(){
      return x;
    }
    @Override 
    public int getY(){
      return y;
    }
    
    public boolean getSelected() {
      return selected;
    }
    
    public void setSelected(boolean in) {
      selected = in; 
    }
      
    @Override
    public Circle contains(int x, int y) {
      double a = Math.sqrt((x-this.x)*(x-this.x) +(y- this.y)*(y- this.y));
      if(radius <= a)
      return this;
      else
      return null;
    }
    
    public String toString() 
    { 
      String res = " circle area: " + getArea() + "\t"; 
      if ( getSelected() == true) 
        res = res + "selected\n"; 
      else if(getSelected() == false)
        res = res + "non-selected\n"; 
      
      return res; 
    }

}
      